            'sabado': 'ISO 39001 - Sistema de Gesti√≥n de la Seguridad Vial, que establece requisitos para implementar, mantener y mejorar un sistema de gesti√≥n de seguridad vial en organizaciones.'
        };

        function showDay(day) {
            // Hide all day contents
            const dayContents = document.querySelectorAll('.day-content');
            dayContents.forEach(content => {
                content.classList.remove('active');
            });

            // Remove active class from all buttons
            const dayButtons = document.querySelectorAll('.day-btn');
            dayButtons.forEach(btn => {
                btn.classList.remove('active');
            });

            // Show selected day content
            document.getElementById(day).classList.add('active');
            
            // Add active class to clicked button
            event.target.classList.add('active');

            // Update progress bar
            const days = ['lunes', 'martes', 'miercoles', 'jueves', 'viernes', 'sabado', 'domingo'];
            const dayIndex = days.indexOf(day);
            const progress = ((dayIndex + 1) / days.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function flipCard(card) {
            const content = card.querySelector('.flashcard-content');
            const currentDay = document.querySelector('.day-content.active').id;
            
            if (card.classList.contains('flipped')) {
                // Show question
                content.innerHTML = '<strong>Flash Card:</strong> ' + getQuestionForDay(currentDay);
                card.classList.remove('flipped');
            } else {
                // Show answer
                content.innerHTML = '<strong>Respuesta:</strong> ' + flashcardAnswers[currentDay];
                card.classList.add('flipped');
            }
        }

        function getQuestionForDay(day) {
            const questions = {
                'lunes': '¬øQu√© es la Visi√≥n Cero?',
                'martes': 'Menciona 3 ejemplos de peligros en contexto urbano',
                'miercoles': '¬øCu√°l es la f√≥rmula b√°sica del Nivel de Riesgo?',
                'jueves': 'Menciona tres medidas de control de alto impacto',
                'viernes': '¬øQu√© es el ciclo PHVA en Seguridad Vial?',
                'sabado': 'Menciona un est√°ndar de SV globalmente reconocido'
            };
            return questions[day];
        }

        function showRiskInfo(riskLevel) {
            const messages = {
                'low': 'Riesgo Bajo: Monitoreo rutinario suficiente',
                'medium': 'Riesgo Medio: Requiere atenci√≥n y medidas preventivas',
                'high': 'Riesgo Alto: Acci√≥n inmediata requerida',
                'critical': 'Riesgo Cr√≠tico: Intervenci√≥n urgente necesaria'
            };
            
            // Create temporary message
            const message = document.createElement('div');
            message.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: #2d3436;
                color: white;
                padding: 20px;
                border-radius: 10px;
                z-index: 1000;
                box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            `;
            message.textContent = messages[riskLevel];
            document.body.appendChild(message);
            
            setTimeout(() => {
                document.body.removeChild(message);
            }, 2000);
        }

        function selectQuizOption(option, isCorrect) {
            // Remove previous selections
            const options = option.parentNode.querySelectorAll('.quiz-option');
            options.forEach(opt => {
                opt.classList.remove('correct', 'incorrect');
            });
            
            // Mark selected option
            if (isCorrect) {
                option.classList.add('correct');
            } else {
                option.classList.add('incorrect');
                // Also show the correct answer
                options.forEach(opt => {
                    if (opt.textContent.includes('B)')) {
                        opt.classList.add('correct');
                    }
                });
            }
        }
